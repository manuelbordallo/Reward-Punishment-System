# Production Environment Variables
NODE_ENV=production

# Database Configuration
USE_SQLITE=true
# For PostgreSQL (uncomment and configure if needed):
# USE_SQLITE=false
# DB_HOST=postgres
# DB_PORT=5432
# DB_NAME=reward_punishment_db
# DB_USER=postgres
# DB_PASSWORD=your_secure_password_here

# Server Configuration
PORT=3000
FRONTEND_PORT=80

# Security (generate secure values for production)
# JWT_SECRET=your_jwt_secret_here_generate_a_secure_one
# SESSION_SECRET=your_session_secret_here_generate_a_secure_one

